  <% if (typeof htmlWebpackPlugin.options.smartdownBaseURL === 'string'){ %>
  <base href="<%= htmlWebpackPlugin.options.smartdownBaseURL %>">
  <% } %>

  <link
    rel=stylesheet
    href="lib/fonts.css">
  <link
    rel=stylesheet
    href="lib/smartdown.css">

  <script
    src="lib/smartdown.js">
  </script>
</head>

<body
  id="smartdown-outer-container"
  class="smartdown-outer-container">
  <div
    class="smartdown-container"
    id="smartdown-output">
  </div>

  <script src="lib/calc_handlers.js"></script>

  <script src="lib/starter.js"></script>
  <script>
    window.smartdownResourceURL = '';
    window.smartdownBaseURL = '/';

    <% if (typeof htmlWebpackPlugin.options.smartdownBaseURL === 'string'){ %>

    window.smartdownBaseURL = '<%= htmlWebpackPlugin.options.smartdownBaseURL %>';
    window.smartdownResourceURL = '<%= htmlWebpackPlugin.options.smartdownBaseURL %>gallery/resources/';

    <% } %>

    <% if (typeof htmlWebpackPlugin.options.smartdownGistPathPrefix === 'string'){ %>
    window.smartdownGistPathPrefix = '<%= htmlWebpackPlugin.options.smartdownGistPathPrefix %>';
    <% } %>

    <% if (typeof htmlWebpackPlugin.options.smartdownGistHashPrefix === 'string'){ %>
    window.smartdownGistHashPrefix = '<%= htmlWebpackPlugin.options.smartdownGistHashPrefix %>';
    <% } %>

    <% if (typeof htmlWebpackPlugin.options.smartdownDefaultHome === 'string'){ %>
    window.smartdownDefaultHome = '<%= htmlWebpackPlugin.options.smartdownDefaultHome %>';
    <% } %>

    <% if (typeof htmlWebpackPlugin.options.smartdownRawPrefix === 'string'){ %>
    window.smartdownRawPrefix = <%= htmlWebpackPlugin.options.smartdownRawPrefix %>;
    <% } %>

    window.smartdownPostLoadMutator = function(sourceText, cardKey, cardURL, defaultHome) {
      // console.log('smartdownPostLoadMutator', defaultHome);
      if (cardKey === 'README') {
        sourceText += '\n---\n\n[Back to Home](:@' + defaultHome + ')\n';
      }

      return sourceText;
    };

    window.smartdownStarter();
  </script>

</body>
</html>

