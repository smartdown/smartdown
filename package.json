    "@stdlib/dist-tree": "0.0.96",
    "@webcomponents/webcomponentsjs": "^2.7.0",
    "axios": "^0.27.2",
    "base64-js": "^1.5.1",
    "brython": "^3.11.0",
    "dompurify": "^2.4.3",
    "emoji-js": "^3.7.0",
    "file-saver": "^2.0.5",
    "gifffer": "^1.5.4",
