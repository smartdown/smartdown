{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
 	  "noEmitOnError": true,
    "lib": ["es6", "dom"],
    "strictFunctionTypes": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "**/src/external",
    "**/dist"
  ]
}
